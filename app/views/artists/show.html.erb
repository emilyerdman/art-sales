<h1> <%= @artist.getName %> </h1>
<p> <%= @artist.dates %> </p>
<p> <%= @artist.category %> </p>

<table>
  <tr>
    <th>Image</th>
    <th>Piece Info</th>
    <th>Inventory No.</th>
    <th>Type</th>
    <th>Category</th>
    <th>Retail Value</th>
    <th>Frame</th>
    <th>Available</th>
    <th>Location</th>
  </tr>

  <% @artist.works.each do |work| %>
  <tr>
    <td><%= link_to(image_tag(work.getImageUrl, alt: work.title), work) %></td>
    <td><%= work.getArtist %><br/><%= simple_format(work.getDisplayInfo) %></td>
    <td><%= work.inventory_number %></td>
    <td><%= work.full_year %></td>
    <td><%= work.art_type %></td>
    <td><%= work.category %></td>
    <td><%= work.getRetailValue %></td>
    <td><%= work.getFrame %></td>
    <td><%= simple_format(work.getAvailability) %> </td>
    <td><%= simple_format(work.getLocation) %> </td>
  </tr>
  <% end %>
</table>